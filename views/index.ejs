<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <h1><%= title %></h1>
    </header>
    <main>
        <div class="forms-container">
        <% if (!userLoggedIn) { %>
            <!-- Display login form if the user is not logged in -->
            <section id="login-form">
                <h2>Login</h2>
                <form action="/login" method="post">
                    <input type="text" name="username" placeholder="Username" required>
                    <input type="password" name="password" placeholder="Password" required>
                    <button type="submit">Login</button>
                </form>
            </section>
            <section id="signup-form">
                <h2>Sign Up</h2>
                <form action="/signup" method="POST">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                    
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                    
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                    
                    <button type="submit">Sign Up</button>
                </form>
            </section>
        <% } else { %>
            <!-- Display user dashboard if logged in -->
            <section id="user-dashboard">
                <p>Welcome, <%= userName %>!</p>
                <nav>
                    <a href="/opportunities">View Opportunities</a>
                    <a href="/applications">Your Applications</a>
                    <a href="/listings">Your Listings</a>
                    <a href="/create-opportunity">Create New Opportunity</a>
                </nav>
            </section>
        <% } %>
        </div>
        <!-- Always display opportunities -->
        <section id="opportunities-list">
            <h2>Opportunities</h2>
            <ul>
                <% opportunities.forEach(function(opportunity) { %>
                    <li>
                        <img src="<%= opportunity.Image %>" alt="<%= opportunity.Name %>" style="width:100px; height:100px;">
                        <div>
                            <h3><%= opportunity.Name %></h3>
                            <p><%= opportunity.Description %></p>
                            <p><strong>Requirements:</strong> <%= opportunity.Requirements %></p>
                            <p><strong>Duration:</strong> <%= opportunity.Duration %></p>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 Your Company</p>
    </footer>
    <script src="/javascripts/main.js"></script>
</body>
</html>

