<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <h1><%= title %></h1>
    </header>
    <main>
        <section id="auth-form">
            <h2><%= userLoggedIn ? 'Dashboard' : 'Login / Sign Up' %></h2>
            <form action="/auth" method="POST">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" value="<%= username || '' %>" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="<%= email || '' %>" required>

                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>

                <% if (!userLoggedIn) { %>
                    <label for="action-login">
                        <input type="radio" id="action-login" name="actionType" value="login" checked>
                        Login
                    </label>
                    <label for="action-signup">
                        <input type="radio" id="action-signup" name="actionType" value="signup">
                        Sign Up
                    </label>
                <% } %>

                <button type="submit"><%= userLoggedIn ? 'Go to Dashboard' : 'Submit' %></button>
            </form>
        </section>
        <!-- Always display opportunities -->
        <section id="opportunities-list">
            <h2>Opportunities</h2>
            <ul>
                <% opportunities.forEach(function(opportunity) { %>
                    <li>
                        <img src="<%= opportunity.Image %>" alt="<%= opportunity.Name %>" style="width:100px; height:100px;">
                        <div>
                            <h3><%= opportunity.Name %></h3>
                            <p><%= opportunity.Description %></p>
                            <p><strong>Requirements:</strong> <%= opportunity.Requirements %></p>
                            <p><strong>Duration:</strong> <%= opportunity.Duration %></p>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </section>
    </main>
    <footer>
        <p>&copy; 2024</p>
    </footer>
    <script src="/javascripts/main.js"></script>
</body>
</html>

