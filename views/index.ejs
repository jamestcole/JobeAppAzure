<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <h1><%= title %></h1>
    </header>
    <main>
        <section id="auth-form">
            <h2>Login / Sign Up</h2>
            <form id="authForm" method="POST">
                <!-- Hidden field to determine form action -->
                <input type="hidden" id="formAction" name="formAction" value="login">
                
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email">

                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>

                <!-- Radio buttons to select action -->
                <label for="action-login">
                    <input type="radio" id="action-login" name="actionType" value="login" checked>
                    Login
                </label>
                <label for="action-signup">
                    <input type="radio" id="action-signup" name="actionType" value="signup" >
                    Sign Up
                </label>

                <button type="submit" id="submitButton">Submit</button>
            </form>
        </section>

        <!-- Opportunities Section -->
        <section id="opportunities-list">
            <h2>Opportunities</h2>
            <ul>
                <% opportunities.forEach(function(opportunity) { %>
                    <li>
                        <img src="<%= opportunity.Image %>" alt="<%= opportunity.Name %>" style="width:100px; height:100px;">
                        <div>
                            <h3><%= opportunity.Name %></h3>
                            <p><%= opportunity.Description %></p>
                            <p><strong>Requirements:</strong> <%= opportunity.Requirements %></p>
                            <p><strong>Duration:</strong> <%= opportunity.Duration %></p>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 </p>
    </footer>
    <script>
        // JavaScript to dynamically set form action
        document.getElementById('authForm').addEventListener('submit', function(event) {
            var actionType = document.querySelector('input[name="actionType"]:checked').value;
            if (actionType === 'signup') {
                this.action = '/signup';
            } else {
                this.action = '/login';
            }
        });

        // Hide email field for login
        document.querySelectorAll('input[name="actionType"]').forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.value === 'login') {
                    document.getElementById('email').style.display = 'none';
                } else {
                    document.getElementById('email').style.display = 'block';
                }
            });
        });
    </script>
</body>
</html>


